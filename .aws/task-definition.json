{
    "family": "smart-household-account-book-task",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "backend",
            "image": "266735842912.dkr.ecr.ap-northeast-1.amazonaws.com/smart_household_account_book:latest",
            "portMappings": [
                {
                    "containerPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "SPRING_DATASOURCE_URL",
                    "value": "jdbc:mysql://localhost:3306/your-db"
                },
                {
                    "name": "SPRING_DATASOURCE_USERNAME",
                    "value": "root"
                },
                {
                    "name": "SPRING_DATASOURCE_PASSWORD",
                    "value": "***REDACTED***"
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/smart-household-account-book",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "mysql",
            "image": "mysql:8.0",
            "portMappings": [
                {
                    "containerPort": 3306,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "***REDACTED***"
                },
                {
                    "name": "MYSQL_DATABASE",
                    "value": "demo"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "mysqladmin ping -h localhost -uroot -p***REDACTED***"
                ],
                "interval": 5,
                "timeout": 5,
                "retries": 10,
                "startPeriod": 30
            },
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/smart-household-account-book",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::266735842912:role/ecsTaskExecutionRole"
}