{
    "family": "smart-household-account-book-task",
    "containerDefinitions": [
        {
            "name": "backend",
            "image": "266735842912.dkr.ecr.ap-northeast-1.amazonaws.com/smart_household_account_book:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "name": "backend-8080-tcp",
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "SPRING_DATASOURCE_USERNAME",
                    "value": "root"
                },
                {
                    "name": "SPRING_DATASOURCE_PASSWORD",
                    "value": "rootpassword"
                },
                {
                    "name": "SPRING_DATASOURCE_URL",
                    "value": "jdbc:mysql://localhost:3306/demo"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "dependsOn": [
                {
                    "containerName": "mysql",
                    "condition": "HEALTHY"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/smart-household-account-book",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "systemControls": []
        },
        {
            "name": "mysql",
            "image": "mysql:8.0",
            "cpu": 0,
            "portMappings": [
                {
                    "name": "mysql-3306-tcp",
                    "containerPort": 3306,
                    "hostPort": 3306,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "MYSQL_DATABASE",
                    "value": "demo"
                },
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "rootpassword"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/smart-household-account-book",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "mysqladmin ping -h localhost -uroot -prootpassword"
                ],
                "interval": 5,
                "timeout": 5,
                "retries": 10,
                "startPeriod": 30
            },
            "systemControls": []
        }
    ],
    "executionRoleArn": "arn:aws:iam::266735842912:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "volumes": [],
    "placementConstraints": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048"
}